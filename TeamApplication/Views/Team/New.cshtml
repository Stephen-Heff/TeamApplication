
@{
    ViewBag.Title = "Create";
}

<style>
    .navbar {
        background-color: #1B2430;
    }

    body {
        background-color: lightgray;
    }

    a {
        color: seagreen;
    }
</style>

<h2>Add Team</h2>

<form action="/Team/Create" method="post">
    <div>
        <label>Team ID:</label>
        <input type="number" name="TeamID" />
    </div>
    <div>
        <label>Team name:</label>
        <input type="text" name="TeamName" />
    </div>
    <div>
        <label>City:</label>
        <input type="number" name="TeamCity" />
    </div>
    <div>
        <label>Coach:</label>
        <input type="number" name="TeamCoach" />
    </div>
    <div>

        <input type="submit" value="Add Team" />
    </div>

</form>

